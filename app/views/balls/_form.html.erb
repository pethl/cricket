<%= form_for(@ball) do |f| %>
  <% if @ball.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ball.errors.count, "error") %> prohibited this ball from being saved:</h2>

      <ul>
      <% @ball.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :match_id %><br>
     <%= f.collection_select :match_id, Match.all, :id, :match_name, {:prompt => 'Please select match'} %>
  </div>
  <div class="field">
    <%= f.label :bowler %><br>
     <%= f.collection_select :bowler, Player.all, :id, :name_by_team, {:prompt => 'Please select bowler'} %>
  </div>
  <div class="field">
    <%= f.label :batsman %><br>
    <%= f.collection_select :batsman, Player.all, :id, :name_by_team, {:prompt => 'Please select batsman'} %>
  </div>
  <div class="field">
    <%= f.label :over_id %><br>
    <%= f.number_field :over_id, min:0 %>
  </div>
 
  <div class="field">
    <%= f.label :delivery %><br>
    <%= f.select :delivery, options_for_select([["select delivery", ""], 1,2,3,4,5,6], f.object.delivery) %>
  </div>
  <div class="field">
    <%= f.label :four %><br>
    <%= f.check_box :four %>
  </div>
  <div class="field">
    <%= f.label :six %><br>
    <%= f.check_box :six %>
  </div>
  <div class="field">
    <%= f.label :runs %><br>
    <%= f.select :runs, options_for_select([["select runs scored",], 0,1,2,3,5], f.object.delivery) %>
  </div>
  <div class="field">
    <%= f.label :wicket %><br>
    <%= f.check_box :wicket %>
  </div>
  <div class="field">
    <%= f.label :catcher %><br>
    <%= f.collection_select :catcher, Player.all, :id, :name_by_team, {:prompt => 'Please select caught by'} %>  
  </div>
  <div class="field">
    <%= f.label :done %><br>
    <%= f.check_box :done %>
  </div>
  <div class="field">
    <%= f.label :declared %><br>
    <%= f.check_box :declared %>
  </div>
  <div class="field">
    <%= f.label :out %><br>
    <%= f.select :out, ['C', 'CB', 'LBW', 'RO'], {:prompt => 'Please select out type'} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
